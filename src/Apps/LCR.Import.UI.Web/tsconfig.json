{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "src/",
    "baseUrl": "./src",
    "outDir": "wwwroot/dist",
    "sourceMap": true,
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2017", "es2015", "es2015.promise", "dom"],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true
  },
  "filesGlob": ["./src/**/*.ts", "./test/**/*.ts", "./src/custom.d.ts"],
  "exclude": ["node_modules", "wwwroot/jspm_packages"],
  "atom": {
    "rewriteTsconfig": false
  }
}
